{
  "name": "root",
  "version": "1.0.8",
  "private": true,
  "main": "index.js",
  "repository": "https://github.com/LinkdropProtocol/linkdrop-monorepo.git",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "packages/apps/*"
  ],
  "scripts": {
    "test": "cd packages/contracts/ && mocha --require @babel/polyfill --require @babel/register",
    "compile-contracts": "cd packages/contracts && npx waffle .waffle",
    "deploy-registry": "npx babel-node packages/scripts/src/deploy_registry.js",
    "deploy-mastercopy": "npx babel-node packages/scripts/src/deploy_mastercopy.js",
    "deploy-mastercopy-transfer": "npx babel-node packages/scripts/src/deploy_mastercopy_transfer.js",
    "deploy-factory": "npx babel-node packages/scripts/src/deploy_factory.js",
    "deploy-erc20": "npx babel-node packages/scripts/src/deploy_erc20.js",
    "deploy-erc721": "npx babel-node packages/scripts/src/deploy_erc721.js",
    "generate-links-eth": "npx babel-node packages/scripts/src/generate_links_eth.js",
    "generate-links-erc20": "npx babel-node packages/scripts/src/generate_links_erc20.js",
    "generate-links-erc721": "npx babel-node packages/scripts/src/generate_links_erc721.js",
    "generate-links": "npx babel-node packages/scripts/src/generate_links.js",
    "generate-links-short": "npx babel-node packages/scripts/src/generate_links_short.js",
    "claim-eth": "npx babel-node packages/scripts/src/claim_eth.js",
    "claim-erc20": "npx babel-node packages/scripts/src/claim_erc20.js",
    "claim-erc721": "npx babel-node packages/scripts/src/claim_erc721.js",
    "server": "npx babel-node packages/server/server.js",
    "dev:server": "nodemon --exec npx babel-node packages/server/server.js",
    "deploy-linkdrop-contracts": "yarn compile-contracts && yarn deploy-mastercopy-transfer && yarn deploy-mastercopy && yarn deploy-factory",
    "deploy-tokens": "yarn deploy-erc20 && yarn deploy-erc721",
    "set-mastercopy": "npx babel-node packages/scripts/src/set_mastercopy.js",
    "update-mastercopy": "yarn deploy-mastercopy && yarn set-mastercopy",
    "test:demo": "NODE_ENV=test-demo NODE_PATH=./packages/apps/app-demo mocha packages/apps/app-demo/test/**/*.js  --compilers js:@babel/register --require ignore-styles --recursive",
    "test:claim": "NODE_ENV=test-claim NODE_PATH=./packages/apps/app-claim mocha packages/apps/app-claim/test/**/*.js  --compilers js:@babel/register --require ignore-styles --recursive",
    "build:sdk": "babel packages/sdk/src -d packages/sdk/dist",
    "retry-transaction": "npx babel-node packages/server/tasks/retry_transaction.js",
    "retry-operation": "npx babel-node packages/server/tasks/retry_operation.js",
    "send-tx-for-operation": "npx babel-node packages/server/tasks/send-tx-for-operation.js",
    "load-test": "cd packages/scripts && yarn load-test"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "devDependencies": {
    "lerna": "^3.16.4"
  }
}
